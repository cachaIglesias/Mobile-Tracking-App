<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.service.tracking.mobile.mobiletrackingservice.activity.MapsActivity">

    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar2"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme">

    <ImageButton
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:src="@drawable/back"
        app:theme="@style/AppTheme"
        android:background="@color/colorPrimary"
        android:contentDescription="Return to main activity"
        android:onClick="terminarActividad"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:text="Settings"
        />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Tiempo mínimo de actualización:"
        android:textSize="20dp"
        android:paddingStart="10pt"
        android:paddingLeft="10pt"
        android:paddingBottom="5pt"
        />

    <Spinner
        android:id="@+id/spinner_min_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:textSize="20dp"
        android:paddingStart="10pt"
        android:paddingLeft="10pt"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Distancia mínima de actualización:"
        android:textSize="20dp"
        android:paddingStart="10pt"
        android:paddingLeft="10pt"
        android:paddingBottom="5pt"
        />

    <Spinner
        android:id="@+id/spinner_min_dist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:textSize="20dp"
        android:paddingStart="10pt"
        android:paddingLeft="10pt"
        />


    <EditText android:id="@+id/ngrok_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textSize="25dp"
        android:paddingStart="10pt"
        android:paddingLeft="10pt"
        android:paddingBottom="5pt"
        android:hint="@string/ngrok_url_text" />

    <EditText android:id="@+id/deliveryMan_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textSize="20dp"
        android:paddingStart="10pt"
        android:paddingLeft="10pt"
        android:paddingBottom="5pt"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:hint="@string/deliveryMan_id_text" />

